         <query name="update-by-PK" type="UPDATE">
            <param name="key-user-id"/>
            <param name="key-type"/>
            <statement><![CDATA[

                  UPDATE <TABLE/>
                  SET <FIELDS/>
                  WHERE <FIELD name='user-id'/> = ${key-user-id}
